<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>YourListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>PurchaseController</servlet-name>
        <servlet-class>PurchaseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>loginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productsController</servlet-name>
        <servlet-class>productsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buyController</servlet-name>
        <servlet-class>buyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductView</servlet-name>
        <servlet-class>ProductView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productsController</servlet-name>
        <url-pattern>/productsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buyController</servlet-name>
        <url-pattern>/buyController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductView</servlet-name>
        <url-pattern>/ProductView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseController</servlet-name>
        <url-pattern>/PurchaseController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
